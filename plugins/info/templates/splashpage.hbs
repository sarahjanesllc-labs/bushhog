{{>header-main}}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <a href="/togo">
                <img src="/static/img/rolesville_togo_button.png" class="img-responsive">
            </a>
            <p class="text-center">
                Shop online for your fully customizable produce box and ready to be picked up during our drive-thru pickup day!
            </p>
        </div>

        <div class="col-md-8 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="fa fa-clock-o"></span> Hours</h3>
                </div>
                <div class="panel-body">
                    <strong>Produce Pickup</strong>: Thursday 4pm - 7pm
                    <hr>
                    <strong>Market</strong>: Friday 10am - 4pm & Saturday 9am - 1pm
                </div>
            </div>

            <h3>What's the latest?</h3>
            <hr>
            {{#each posts}}
                <div class="post-title">
                    <h5>{{title}} <small>{{created}}</small></h5>
                </div>
                <div class="post-body">
                    {{{html}}}
                </div>
            {{/each}}
        </div>
    </div>
</div>
{{>footer}}
